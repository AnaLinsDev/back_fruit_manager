generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id             String           @id @default(uuid())
  acronym        String
  description    String
  PurchaseRecord PurchaseRecord[]

  @@map("products")
}

model PurchaseRecord {
  id        String   @id @default(uuid())
  date      DateTime @default(now()) // Purchase or sale date
  type      String // "Purchase" or "Sale"
  quantity  Int
  price     Float
  number    Int
  productId String
  product   Product  @relation(fields: [productId], references: [id])

  @@map("purchases")
}
